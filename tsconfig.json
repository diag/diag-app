{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src/js",
    "outDir": "./dist",
    "inlineSources": true,
    "target": "es5",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true
  },
  "include": [
    "src/js/**/*"
  ]
}